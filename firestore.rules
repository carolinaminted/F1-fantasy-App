rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    // Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if user is accessing their own data
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Check if user is the designated admin
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'admin@fantasy.f1';
    }

    // --- Collection Rules ---

    // Users Collection
    match /users/{userId} {
      // Allow any authenticated user to read profiles (needed for leaderboard)
      allow read: if isSignedIn();
      
      // Allow creation only if the document ID matches the auth UID
      allow create: if isOwner(userId);
      
      // Update rules:
      // 1. Owner can update fields EXCEPT 'duesPaidStatus'
      // 2. Admin can update ONLY 'duesPaidStatus'
      allow update: if (isOwner(userId) && !('duesPaidStatus' in request.resource.data.diff(resource.data).changedKeys())) ||
                     (isAdmin() && request.resource.data.diff(resource.data).changedKeys().hasOnly(['duesPaidStatus']));
      
      // Subcollection: Donations
      match /donations/{donationId} {
        allow read: if isOwner(userId) || isAdmin();
        // Donations are likely created via backend or admin, but if client creates:
        allow create: if isOwner(userId); 
      }
    }

    // User Picks Collection
    match /userPicks/{userId} {
      // Allow authenticated users to view picks (league transparency)
      allow read: if isSignedIn();
      
      // Only owner can submit/update their picks
      allow write: if isOwner(userId);
    }

    // App State (Race Results, Form Locks, Scoring Config)
    match /app_state/{document=**} {
      // Authenticated users need to read game state
      allow read: if isSignedIn();
      
      // Only admin can change game state
      allow write: if isAdmin();
    }

    // Dues Payments Collection
    match /dues_payments/{paymentId} {
      // Admin can see all, Users can see their own
      allow read: if isAdmin() || (isSignedIn() && resource.data.uid == request.auth.uid);
      
      // Users can initiate a payment record for themselves
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      
      // Only admin can update/delete (e.g. marking complete)
      allow update, delete: if isAdmin();
    }
  }
}